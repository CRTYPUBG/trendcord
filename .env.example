# Discord Bot Token - Discord Developer Portal'dan alınacak
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE
# Bot Ayarları
PREFIX=!
CHECK_INTERVAL=3600
PROXY_ENABLED=False
VERIFY_SSL=True

# Veritabanı Ayarları
DATABASE_PATH=data/trendyol_tracker.sqlite

# Trendyol API Ayarları (Opsiyonel - Marketplace Partner için)
# Bu ayarlar sadece Trendyol Marketplace Partner'ları için gereklidir
# Eğer partner değilseniz, bot scraping modunda çalışacaktır
TRENDYOL_API_KEY=your_api_key_here
TRENDYOL_API_SECRET=your_api_secret_here
TRENDYOL_SUPPLIER_ID=your_supplier_id_here

# Scraper Ayarları
TIMEOUT=15
MAX_RETRIES=5

# Unified Web App Configuration
WEB_PORT=5000
WEB_HOST=0.0.0.0
CLOUDFLARE_TUNNEL_URL=https://your-domain.com
FLASK_SECRET_KEY=YOUR_FLASK_SECRET_KEY_HERE

# Admin Configuration
ADMIN_SECRET_KEY=admin123

# Discord OAuth Ayarları (Kullanıcı Paneli için)
# Discord Developer Portal'dan OAuth2 uygulaması oluşturun
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET
DISCORD_REDIRECT_URI=https://your-domain.com/auth/callback

# Global Admin ID'leri (virgülle ayırın)
# Bu kullanıcılar tüm sunucularda admin yetkilerine sahip olur
GLOBAL_ADMIN_IDS=YOUR_DISCORD_USER_ID
BACKUP_DATABASE_PATH=data/database.sqlite