# Discord OAuth Ayarları (Kullanıcı Paneli için)
# Discord Developer Portal'dan OAuth2 uygulaması oluşturun
DISCORD_CLIENT_ID=BURAYA_CLIENT_ID_YAPISTIR
DISCORD_CLIENT_SECRET=BURAYA_CLIENT_SECRET_YAPISTIR
DISCORD_REDIRECT_URI=http://localhost:5001/auth/callback

# Discord Bot Token (Mevcut Bot için)
DISCORD_TOKEN=BURAYA_BOT_TOKEN_YAPISTIR

# Flask Güvenlik Anahtarı (Rastgele güçlü anahtar)
FLASK_SECRET_KEY=super-secret-random-key-make-it-very-long-and-complex-123456789

# Global Admin ID'leri (Kendi Discord kullanıcı ID'n)
GLOBAL_ADMIN_IDS=BURAYA_DISCORD_USER_ID_YAPISTIR

# Bot Ayarları
PREFIX=!
CHECK_INTERVAL=3600
PROXY_ENABLED=False
VERIFY_SSL=True

# Veritabanı Ayarları
DATABASE_PATH=data/trendyol_tracker.sqlite

# Scraper Ayarları
TIMEOUT=15
MAX_RETRIES=5

# Kullanıcı Paneli Ayarları
USER_PANEL_HOST=0.0.0.0
USER_PANEL_PORT=5001
DEBUG=false

# Trendyol API Ayarları (Opsiyonel)
TRENDYOL_API_KEY=your_api_key_here
TRENDYOL_API_SECRET=your_api_secret_here
TRENDYOL_SUPPLIER_ID=your_supplier_id_here